<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rflayout" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.highlanderchef.RecipeForum" >

    <TextView
	    android:id="@+id/titleOfRecipe"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/recipeTitle" />
    
    <ImageView
        android:id="@+id/recipeImage"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/titleOfRecipe"
	    android:layout_alignLeft="@+id/titleOfRecipe"
	    android:layout_marginTop="5dp"
	     />
	
	<TextView
	    android:id="@+id/selectedRecipeDirectionList"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignRight="@+id/selectedRecipeIngredientList"
	    android:layout_below="@+id/selectedRecipeIngredientList"
	    android:layout_marginTop="20dp"
	    android:text="@string/defaultDirectionsList" />

	<TextView
	    android:id="@+id/selectedRecipeIngredientList"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/titleOfRecipe"
	    android:layout_below="@+id/recipeImage"
	    android:layout_marginTop="15dp"
	    android:text="@string/defaultIngredientList" />
<!-- 
	<TextView	
		android:id="@+id/postCommentSuccess"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/titleOfRecipe"
	    android:layout_below="@+id/titleOfRecipe"
	    android:layout_marginTop="15dp"
	    android:text="@string/commentSuccess" />
	 -->   
	
	<TextView
	    android:id="@+id/errorCannotDisplayRecipe"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/selectedRecipeDirectionList"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="29dp"
	    android:text="@string/msgCannotDisplayRecipe" />

	<RatingBar
	    android:id="@+id/recipeRatingBar"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/selectedRecipeDirectionList"
	    android:layout_above="@+id/submitComment"
	    android:numStars="5"
	    android:rating="3"
	    android:stepSize="1" />

	<Button
	    android:id="@+id/submitComment"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/selectedRecipeDirectionList"
	    android:layout_alignParentBottom="true"
	    android:onClick="addCommentPressed"
	    android:text="@string/Comment" />

	<EditText
	    android:id="@+id/userCommentText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/recipeRatingBar"
	    android:layout_alignLeft="@+id/recipeRatingBar"
	    android:ems="10"
	    android:gravity="bottom"
	    android:hint="@string/tapToComment" />
	  
</RelativeLayout>
