<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/SaveDraftButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="SaveAsDraftPressed"
        android:text="@string/SaveDraft" />

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.highlanderchef.MakeARecipe3" >

            <TextView
                android:id="@+id/makearecipe3header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_marginLeft="10dp"
                android:text="@string/MakeARecipe3Header" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/button2"
                android:layout_below="@+id/button1"
                android:onClick="submitRecipePressed"
                android:text="@string/Submit_Recipe" />

            <ImageView
                android:id="@+id/added_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="28dp"
                android:src="@drawable/uploadimage" />

            <TextView
                android:id="@+id/submit_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button3"
                android:layout_centerHorizontal="true"
                android:text="@string/submit_error" />

            <EditText
                android:id="@+id/addadirection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/makearecipe3header"
                android:ems="10"
                android:hint="@string/Enter_a_direction" />

            <LinearLayout
                android:id="@+id/linearLayoutDirections"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/new_directions_header"
                android:orientation="vertical" >
            </LinearLayout>

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/button3"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/button2"
                android:layout_marginTop="43dp"
                android:onClick="addADirectionPressed"
                android:text="@string/Add_directions_button" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/addadirection"
                android:layout_below="@+id/addadirection"
                android:layout_marginTop="18dp"
                android:onClick="addImageToDirectionPressed"
                android:text="@string/AddImagetoDirection" />

            <TextView
                android:id="@+id/new_directions_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/makearecipe3header"
                android:layout_below="@+id/addadirection"
                android:text="@string/New_directions_header" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>